<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stats_bg"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/balanceStat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: $0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        <!-- Başlık -->
        <TextView
            android:id="@+id/titleStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Investment Summary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Logo veya ikon -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_turtle"
            android:contentDescription="Logo"
            android:layout_marginBottom="24dp" />

        <!-- İstatistik Kartı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:elevation="6dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/totalInvestment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Investment: $0.00"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/totalProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Profit: $0.00"
                android:textSize="18sp"
                android:textColor="#A5D6A7"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/positiveCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profitable Stocks: 0"
                android:textColor="#BBDEFB"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/negativeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loss Stocks: 0"
                android:textColor="#FFCDD2"
                android:layout_marginBottom="8dp" />
            <Button
                android:id="@+id/btnViewTransfers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Transfers"
                android:layout_marginTop="24dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Not veya tavsiye -->
        <TextView
            android:id="@+id/tipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip: Diversify your investments for better balance!"
            android:textColor="#E0F7FA"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
