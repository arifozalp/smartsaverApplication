<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sembol -->
        <TextView
            android:id="@+id/stockSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASELS.IS"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- Aralık seçici -->
        <Spinner
            android:id="@+id/rangeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp"/>

        <!-- Güncel fiyat -->
        <TextView
            android:id="@+id/stockPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Price: $0.00"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Değişim -->
        <TextView
            android:id="@+id/stockChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change: 0.00%"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Grafik -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />

        <!-- Kullanıcı bakiyesi -->
        <TextView
            android:id="@+id/userBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: $0.00"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- Miktar girme -->
        <EditText
            android:id="@+id/inputQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter quantity"
            android:inputType="number"
            android:layout_marginTop="16dp" />

        <!-- Toplam tutar -->
        <TextView
            android:id="@+id/totalCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $0.00"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Sahip olunan miktar -->
        <TextView
            android:id="@+id/ownedQuantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owned: 0"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnSell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</ScrollView>
